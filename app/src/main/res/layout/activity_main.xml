<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtv_disp_opera"
        android:text="5+5+7"
        android:textColor="@color/white"
        android:gravity="right"
        android:textSize="30sp"
        android:paddingRight="10sp"
        android:background="@color/colorDisplay"
        />
    <TextView
        android:id="@+id/txtv_disp_resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="17"
        android:textColor="@color/white"
        android:gravity="right"
        android:textSize="30sp"
        android:paddingRight="10sp"
        android:background="@color/colorDisplay"
        />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="5"
        android:layout_margin="2dp">

    <Button
        android:id="@+id/btn_clear"
        style="@style/BotonesOpera"
        android:text="c"
        android:onClick="onClick"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_margin="2dp"
        />

        <Button
            android:id="@+id/btn_porcentaje"
            style="@style/BotonesOpera"
            android:text="%"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btn_multiplica"
            style="@style/BotonesOpera"
            android:text="x"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btn_divide"
            style="@style/BotonesOpera"
            android:text="/"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_margin="2dp"
            />

        <Button
            android:id="@+id/btn_siete"
            style="@style/BotonesNumericos"
            android:text="7"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_margin="2dp"
            android:onClick="onClick"
            />

        <Button
            android:id="@+id/btn_ocho"
            style="@style/BotonesNumericos"
            android:text="8"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_margin="2dp"
            android:onClick="onClick"
            />
        <Button
            android:id="@+id/btn_nueve"
            style="@style/BotonesNumericos"
            android:text="9"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_margin="2dp"
            android:onClick="onClick"
            />
        <Button
            android:id="@+id/btn_cuatro"
            style="@style/BotonesNumericos"
            android:text="4"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_margin="2dp"
            android:onClick="onClick"
            />
        <Button
            android:id="@+id/btn_cinco"
            style="@style/BotonesNumericos"
            android:text="5"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_margin="2dp"
            android:onClick="onClick"
            />
        <Button
            android:id="@+id/btn_seis"
            style="@style/BotonesNumericos"
            android:text="6"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_margin="2dp"
            android:onClick="onClick"
            />
        <Button
            android:id="@+id/btn_tres"
            style="@style/BotonesNumericos"
            android:text="3"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_margin="2dp"
            android:onClick="onClick"
            />
        <Button
            android:id="@+id/btn_dos"
            style="@style/BotonesNumericos"
            android:text="2"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_margin="2dp"
            android:onClick="onClick"
            />
        <Button
            android:id="@+id/btn_uno"
            style="@style/BotonesNumericos"
            android:text="1"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_margin="2dp"
            android:onClick="onClick"
            />
        <Button
            android:id="@+id/btn_cero"
            style="@style/BotonesNumericos"
            android:text="0"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_margin="2dp"
            android:onClick="onClick"
            />

        <Button
            android:id="@+id/btn_punto"
            style="@style/BotonesNumericos"
            android:text="."
            android:layout_column="0"
            android:layout_row="4"
            android:layout_margin="2dp"
            />

        <Button
            android:id="@+id/btn_signo"
            style="@style/BotonesNumericos"
            android:text="+/-"
            android:layout_column="2"
            android:layout_row="4"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btn_resta"
            style="@style/BotonesOpera"
            android:text="-"
            android:layout_column="3"
            android:layout_row="1"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btn_suma"
            style="@style/BotonesOpera"
            android:text="+"
            android:layout_column="3"
            android:layout_row="2"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btn_igual"
            style="@style/BotonesOpera"
            android:text="="
            android:layout_column="3"
            android:layout_row="3"
            android:layout_rowSpan="2"
            android:layout_gravity="fill_vertical"
            android:layout_margin="2dp"
            />







    </GridLayout>




</LinearLayout>